@using RunChallenge.MVC.Areas.Administration.Models
@model IEnumerable<UserModel>

@(Html.Kendo()
    .Grid<UserModel>(Model)
    .Name("grid")
    .Columns(cols =>
    {
        cols.Bound(user => user.UserName);
        cols.Bound(user => user.Email);
        cols.Bound(user => user.WorkoutsCount);
        cols.Bound(user => user.ArticlesCount);
        cols.Bound(user => user.Id)
            .Template(@<text>@Html.ActionLink("Make Moderator", "MakeModerator", new { id = @item.Id })</text>);
    })
    .Sortable()
    .Pageable()
    .Filterable()
    .Groupable()
)
