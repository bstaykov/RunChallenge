@using RunChallenge.MVC.Models.Workouts
@model List<WorkoutItemModel>

@{
    ViewBag.Title = "Last Workouts";
}

@if (Model.Count != 0)
{
    <h2>
        Last workouts
        @if (TempData["Success"] != null)
        {
            <span class="alert-success custom-message-slide">
                @TempData["Success"]
            </span>
        }
    </h2>
    <table class="table table-bordered">
        <tr>
            <th>Distance</th>
            <th>Time</th>
            <th>Location</th>
            <th>Date</th>
            <th>Comment</th>
        </tr>

        @foreach (WorkoutItemModel workout in Model)
        {
            <tr>
                <td>@workout.Distance</td>
                <td>@workout.Time</td>
                <td>@workout.Location</td>
                <td>@workout.Date</td>
                <td>@workout.Comment</td>
            </tr>
        }
    </table>
} else
{
    <h1>No workouts yet!</h1>
}

